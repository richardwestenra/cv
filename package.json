{
  "name": "cv",
  "scripts": {
    "build-task:scss-compile":
      "node-sass-chokidar --source-map true scss/ -o css",
    "build-task:autoprefixer": "postcss css/*.css --use autoprefixer -d css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'scss/**/*.scss' -c 'npm run sass:build'",
    "serve": "browser-sync --server --watch",
    "start": "npm-run-all -p sass:* serve"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "autoprefixer": "^8.5.2",
    "browser-sync": "^2.24.4",
    "chokidar-cli": "^1.2.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0"
  }
}
